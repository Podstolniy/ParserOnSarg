#!/usr/bin/python

import os
import platform
import csv
import subprocess
import sys
import argparse
import json
import math
import abc
from collections import Counter


def fullfile(args):
	
	if os.path.exists(args.d[0])==False:
		print('Not Dir')
	else:
		cat=os.listdir(args.d[0])
		size=[]
		s=0
		for p in cat:
					size.append(((os.path.getsize(args.d[0]+'/'+p)),p))
					s=s+1
		a=sorted(size)
		for sorti in a:
					print(sorti)	# проверка отображения

def dirParser():
	parser = argparse.ArgumentParser()
	parser.add_argument ('d',action='store', nargs='*', help = 'pars', type = str, metavar = 'Name')
	return parser

def main():
	parser = dirParser()
	
	args = parser.parse_args()
	if args.d == []:
		print('Not Argument!!!')
		
	else:
		fullfile(args)
		
if __name__ == '__main__':
	main()
